<div class="text-center">
  <h2>All Cocktail List</h2>
</div>
<div>
  <div class="card-container row">
    <% @cocktails.each do |cocktail| %>
      <a href= <%=cocktail_path(cocktail.id)%>>
        <div class="col-xs-6 col-sm-4 col-sm-3">
          <div class="card" style="background-image: linear-gradient(0deg, rgba(0,0,0,0) 0%, rgba(0,0,0,0.2) 100%), url(https://images.unsplash.com/photo-1470337458703-46ad1756a187?)">
            <h3><%= cocktail.name %></h3>
          </div>
        </div>
      </a>
    <% end %>
  </div>
</div>

<div class="text-center">
  <%= link_to "Add cocktail", new_cocktail_path, :class => "btn btn-primary" %>
</div>
